
<script src="~/js/Sign/Sign.js"></script>

@model FourierNewton.Models.Sign.SignUpViewModel

@{
    ViewData["Title"] = "Sign up";
}

<h1>@ViewData["Title"]</h1>

<form action="/Sign/SignUpProcess" method="post" oninput="removeErrorMessage()">
    <label for="email">Email: </label>
    <input type="email" id="email" size="40" name="email" value="">
    <input type="submit" value="Generate Account">
</form>

@if (Model.IsError)
{
    <p id="errorMessageParagraph" style="color:rgba(255,0,0,1.0);">@Model.ErrorMessage</p>
}

